layout {
    background-color "transparent"

    focus-ring {
        active-color   "#cebdfe"
        inactive-color "#938f99"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#cebdfe"
        inactive-color "#938f99"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#cebdfe"
        inactive-color "#938f99"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#cebdfe80"
    }
}

recent-windows {
    highlight {
        active-color   "#4c3e76"
        urgent-color   "#ffb4ab"
    }
}